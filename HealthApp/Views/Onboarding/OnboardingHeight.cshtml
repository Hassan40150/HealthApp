@model HealthApp.ViewModels.Onboarding.OnboardingHeightViewModel

@{
    ViewData["Title"] = "What's your height?";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="OnboardingHeight" method="post">
    <div>
        <label for="heightRange">Height (cm): <span id="heightValue">@Model.HeightCm</span> cm</label><br />
        <input type="range" asp-for="HeightCm" id="heightRange" min="100" max="220" step="1"
               oninput="document.getElementById('heightValue').innerText = this.value" />
        <span asp-validation-for="HeightCm" class="text-danger"></span>
    </div>

    <button type="submit">Continue</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
