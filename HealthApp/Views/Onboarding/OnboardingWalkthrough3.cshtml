@model HealthApp.ViewModels.Onboarding.Walkthrough3ViewModel

@{
    ViewData["Title"] = "Hydration Summary";
}

<div class="max-w-xl mx-auto text-center">
    <h2 class="text-2xl font-semibold mb-4">Hydration Summary</h2>

    <div class="mb-4">
        <p><strong>Your recommended hydration:</strong> @Model.RecommendedMl mL</p>
        <p><strong>Your actual intake:</strong> @Model.ActualIntakeMl mL</p>
        <p><strong>Typical water loss per day:</strong> @Model.TypicalLossMl mL</p>
    </div>

    <div class="bg-gray-100 text-sm p-4 rounded mb-6">
        @Model.HydrationFeedback
    </div>

    <form asp-action="OnboardingWalkthrough3Post" method="post">
        <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded shadow">
            Finish & Go to Dashboard
        </button>
    </form>
</div>
