@model HealthApp.ViewModels.Onboarding.OnboardingGenderViewModel
@section Styles {
	<link rel="stylesheet" href="~/css/onboarding.css" />
}




<div class="onboarding">

	<div class="onboarding-top-section">

		<div class="onboarding-back">
			<a asp-controller="Onboarding" asp-action="OnboardingAge">
				<i class="fa-solid fa-chevron-left"></i>
			</a>
		</div>


		<div class="progress-container">
			<div class="progress-bar" style="width: 20%;"></div>
		</div>


		<div>
		</div>
	</div>


	<div class="gender">


		<form asp-action="OnboardingGender" method="post" class="gender-form">

			<div class="gender-input">
				<label asp-for="Sex">What is your gender?</label>

				<div class="gender-container">
					<label class="custom-radio">
						<input type="radio" asp-for="Sex" value="male" id="male" checked />
						<span class="radio-circle"></span>
						Male
					</label>
				</div>

				<div class="gender-container">
					<label class="custom-radio">
						<input type="radio" asp-for="Sex" value="female" id="female" />
						<span class="radio-circle"></span>
						Female
					</label>
				</div>
			</div>



			<div class="gender-submit">
				<button type="submit" asp-action="OnboardingGender" class="nomie-btn">Continue</button>
			</div>

		</form>

	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
